index 2fb53d0..05a92b2 100644
--- a/lib/unix.c
+++ b/lib/unix.c
@@ -85,7 +85,7 @@ qb_sys_mmap_file_open(char *path, const char *file, size_t bytes,
 	if (is_absolute) {
 		(void)strlcpy(path, file, PATH_MAX);
 	} else {
